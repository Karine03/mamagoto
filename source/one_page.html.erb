<div class="reservation-container text-center padded" id="reservation">
	<a href="#" class="modal-resa btn-resa hvr-hollow" data-toggle="modal" data-target="#modal-resa">Réservez une table</a>

	<div id="modal-resa" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modal-imgLabel" aria-hidden="true">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-body">
					<iframe src="http://lareserve.io/restaurants/39/bookings/new_web" width="850" height="300" frameborder="0" class="visible-lg visible-md visible-sm"></iframe>
					<iframe src="http://lareserve.io/restaurants/39/bookings/new_web" width="300" height="500" scrolling="yes" frameborder="0" class="visible-xs"></iframe>
	      </div>
	    </div>
	  </div>
	</div>
</div> 

<div class="photo-gallery padded" id="gallery">
	<div class="container">
		<div class="pictures">
			<% data.pictures.each do |pic| %>
				<div class="picture-card" id ="<%= pic.id %>" style="background-image: url('<%= image_path("#{pic.url}")%>');">
					<a href="#" class="modal-link" data-toggle="modal" data-target="#modal-img"></a>
				</div>
			<% end %>
		</div>
	</div>
</div>

<div id="modal-img" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modal-imgLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
				<%= image_tag "", id:"image-src", alt: "Mamagoto", class:"img-responsive" %>
