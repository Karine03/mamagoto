<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <%= favicon_tag 'favicon.ico' %>

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- For Bootstrap responsiveness -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Mamagato Restaurant" %></title>
    
    <meta name="description" content="Restaurant Mamagoto - 5 rue des Petits Hôtels - Paris 10ème - Bistrot de quartier et bar à manger"/>
    <meta property="og:type" content="article"/>
    <meta property="og:url" content="http://www.mamagoto.fr"/>
    <meta property="og:title" content="Restaurant Mamagoto - Paris 10 - Dinette Japonaise"/>
    <meta property="og:image" content="http://www.mamagoto.fr/images/banner/banner1.jpg"/>
    <meta property="og:description" content="Mamagoto, la “dinette” japonaise, joue au bistrot de quartier pour le déjeuner, et au bar à manger le soir où les convives viennent partager leurs assiettes."/>
    <meta property="restaurant:contact_info:street_address" content="5 rue des Petits Hôtels"/>
    <meta property="restaurant:contact_info:locality" content="PARIS"/>
    <meta property="restaurant:contact_info:region" content="ILE-DE-FRANCE"/>
    <meta property="restaurant:contact_info:postal_code" content="75010"/>
    <meta property="restaurant:contact_info:country_name" content="fr"/>
    <meta property="place:location:latitude" content="48.8771396"/>
    <meta property="place:location:longitude" content="2.3544425000000047"/>
    <meta property="fb:app_id"/>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- Leave those next 4 lines if you care about users using IE8 -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body class="<%= page_classes %>">

    <%= yield %>

  </body>
</html>
